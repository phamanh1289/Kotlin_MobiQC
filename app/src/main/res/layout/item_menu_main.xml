<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemMenu_rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2dp"
        android:background="@color/grey_blur"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemMenuMain_tvTitle"
            fontPath="@string/Helvetica_Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@android:color/transparent"
            android:paddingEnd="@dimen/_8dp"
            android:paddingStart="@dimen/_8dp"
            android:textColor="@color/steel"
            android:textSize="@dimen/_16dp"
            tools:ignore="MissingPrefix">
        </TextView>

        <ImageView
            android:id="@+id/itemMenuMain_imgArrow"
            android:layout_width="@dimen/_15dp"
            android:layout_height="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:layout_marginStart="@dimen/_8dp"
            android:src="@drawable/ic_arrow_horizontal"
            tools:ignore="ContentDescription"/>
    </LinearLayout>
</LinearLayout>
