<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragDetailContract_scMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_16dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_15dp"
            app:cardElevation="@dimen/_15dp">

            <EditText
                android:id="@+id/fragReport_tvFromDate"
                fontPath="@string/Helvetica_Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:gravity="center"
                android:padding="@dimen/_8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_17dp"
                tools:text="12/12/2018"/>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_date"
            tools:ignore="ContentDescription"/>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_16dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_15dp"
            app:cardElevation="@dimen/_15dp">

            <EditText
                android:id="@+id/fragReport_tvToDate"
                fontPath="@string/Helvetica_Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:gravity="center"
                android:padding="@dimen/_8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_17dp"
                tools:text="12/12/2018"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/steel"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/fragReport_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36dp"
        fontPath="@string/Helvetica_Bold"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="@dimen/_1dp"
        app:tabTextAppearance="@style/MyCustomTabTextAppearance"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/steel"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragReport_vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
