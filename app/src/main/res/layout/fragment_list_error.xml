<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_16dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_15dp"
            app:cardElevation="@dimen/_15dp">

            <EditText
                android:id="@+id/fragListError_tvFromDate"
                fontPath="@string/Helvetica_Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:gravity="center"
                android:padding="@dimen/_8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_17dp"
                tools:text="12/12/2018"/>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_date"
            tools:ignore="ContentDescription"/>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_16dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_15dp"
            app:cardElevation="@dimen/_15dp">

            <EditText
                android:id="@+id/fragListError_tvToDate"
                fontPath="@string/Helvetica_Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:gravity="center"
                android:padding="@dimen/_8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_17dp"
                tools:text="12/12/2018"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/steel"/>

    <TextView
        android:id="@+id/fragListError_tvNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_data"
        android:textSize="@dimen/_17dp"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragListError_rvMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_8dp"
        android:paddingEnd="@dimen/_8dp"
        android:paddingStart="@dimen/_8dp"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
