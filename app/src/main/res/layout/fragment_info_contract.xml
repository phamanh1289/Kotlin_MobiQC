<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragInfoContract_tvNoData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/no_data"
            android:textColor="@color/black_text"
            android:textSize="@dimen/_19dp"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragInfoContract_rvMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/fragInfoContract_llDataProcessing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8dp"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_8dp">

                <TextView
                    android:id="@+id/fragInfoContract_tvGroupName"
                    fontPath="@string/Helvetica_Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_16dp"
                    android:textColor="@color/button"
                    android:textSize="@dimen/_20dp"
                    tools:text="SDG000000"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8dp"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="@string/contract_assign"/>

                        <TextView
                            android:id="@+id/fragInfoContract_tvContractAssign"
                            fontPath="@string/Helvetica_Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:padding="@dimen/_8dp"
                            android:textColor="@color/black"
                            tools:text="0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="@string/contract_finish"/>

                        <TextView
                            android:id="@+id/fragInfoContract_tvContractFinish"
                            fontPath="@string/Helvetica_Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:padding="@dimen/_8dp"
                            android:textColor="@color/black"
                            tools:text="0"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8dp"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="@string/contract_instock"/>

                        <TextView
                            android:id="@+id/fragInfoContract_tvContractInStock"
                            fontPath="@string/Helvetica_Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:padding="@dimen/_8dp"
                            android:textColor="@color/colorPrimary"
                            tools:text="0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragInfoContract_tvLabelInStockHiFPT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="@string/contract_instock_hi_FPT"/>

                        <TextView
                            android:id="@+id/fragInfoContract_tvContractInStockHiFPT"
                            fontPath="@string/Helvetica_Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:padding="@dimen/_8dp"
                            android:textColor="@color/colorPrimary"
                            tools:text="0"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8dp"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10dp">

                        <TextView
                            android:id="@+id/fragInfoContract_tvLabelOvertime48"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="@string/contract_up_coming"/>

                        <TextView
                            android:id="@+id/fragInfoContract_tvContractComing"
                            fontPath="@string/Helvetica_Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:padding="@dimen/_8dp"
                            android:textColor="@color/bright_red"
                            tools:text="0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10dp">

                        <TextView
                            android:id="@+id/fragInfoContract_tvLabelOvertime96"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="@string/contract_over_time"/>

                        <TextView
                            android:id="@+id/fragInfoContract_tvContractOverTime"
                            fontPath="@string/Helvetica_Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:padding="@dimen/_8dp"
                            android:textColor="@color/bright_red"
                            tools:text="0"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/fragInfoContract_tvSubmit"
                fontPath="@string/Helvetica_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_16dp"
                android:background="@drawable/shape_circle_blue_login"
                android:paddingBottom="@dimen/_10dp"
                android:paddingEnd="@dimen/_50dp"
                android:paddingStart="@dimen/_50dp"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_19dp"
                tools:ignore="MissingPrefix"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
