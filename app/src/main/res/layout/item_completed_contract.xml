<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8dp"
    android:background="@drawable/shape_border_grey_text_view"
    android:orientation="vertical"
    android:padding="@dimen/_12dp"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/Contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contract_number"
        android:textColor="@color/steel"
        app:layout_constraintBottom_toBottomOf="@+id/itemCompletedContract_tvContract"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemCompletedContract_tvContract"/>

    <TextView
        android:id="@+id/itemCompletedContract_tvContract"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="@dimen/_4dp"
        android:textColor="@color/steel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AssignDate"
        app:layout_constraintTop_toBottomOf="@+id/itemCompletedContract_tvDate"
        tools:text="tvContract"/>

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contract_name"
        android:textColor="@color/steel"
        app:layout_constraintBottom_toBottomOf="@+id/itemCompletedContract_tvName"
        app:layout_constraintStart_toStartOf="@+id/Contract"
        app:layout_constraintTop_toTopOf="@+id/itemCompletedContract_tvName"/>

    <TextView
        android:id="@+id/itemCompletedContract_tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4dp"
        android:textColor="@color/steel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemCompletedContract_tvContract"
        app:layout_constraintTop_toBottomOf="@+id/itemCompletedContract_tvContract"
        tools:text="tvName"/>

    <TextView
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contract_address"
        android:textColor="@color/steel"
        app:layout_constraintBottom_toBottomOf="@+id/itemCompletedContract_tvLocation"
        app:layout_constraintStart_toStartOf="@+id/Name"
        app:layout_constraintTop_toTopOf="@+id/itemCompletedContract_tvLocation"/>

    <TextView
        android:id="@+id/itemCompletedContract_tvLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4dp"
        android:textColor="@color/steel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemCompletedContract_tvName"
        app:layout_constraintTop_toBottomOf="@+id/itemCompletedContract_tvName"
        tools:text="tvLocation"/>

    <TextView
        android:id="@+id/AssignDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contract_time"
        android:textColor="@color/steel"
        app:layout_constraintBottom_toBottomOf="@+id/itemCompletedContract_tvAssignDate"
        app:layout_constraintStart_toStartOf="@+id/Location"
        app:layout_constraintTop_toTopOf="@+id/itemCompletedContract_tvAssignDate"/>

    <TextView
        android:id="@+id/itemCompletedContract_tvAssignDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4dp"
        android:textColor="@color/steel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemCompletedContract_tvLocation"
        app:layout_constraintTop_toBottomOf="@+id/itemCompletedContract_tvLocation"
        tools:text="tvAssignDate"/>

    <TextView
        android:id="@+id/itemCompletedContract_tvDate"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="tvDate"/>


</android.support.constraint.ConstraintLayout>
