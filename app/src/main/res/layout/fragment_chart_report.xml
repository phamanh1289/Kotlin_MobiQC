<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragChartReport_tvNoData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_data"
            android:textSize="@dimen/_17dp"
            android:visibility="gone"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/fragChartReport_chart"
            android:layout_width="@dimen/_170dp"
            android:layout_height="@dimen/_170dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8dp">

        </com.github.mikephil.charting.charts.PieChart>

        <LinearLayout
            android:id="@+id/fragChartReport_llTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36dp"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@color/steel"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:paddingEnd="@dimen/_16dp"
                android:paddingStart="@dimen/_16dp"
                android:text="@string/check_list_type"
                android:textColor="@color/white"
                android:textSize="@dimen/_17dp"/>

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:text="@string/contract_number"
                android:textColor="@color/white"
                android:textSize="@dimen/_17dp"/>

            <TextView
                fontPath="@string/Helvetica_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:text="@string/percent_contract"
                android:textColor="@color/white"
                android:textSize="@dimen/_17dp"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragChartReport_rvMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
