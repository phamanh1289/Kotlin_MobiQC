<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemTimeZone_llRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8dp"
    android:background="@drawable/shape_border_grey_text_view"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/_4dp"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/itemTimeZone_imgChecked"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:gravity="center_vertical"
        android:src="@drawable/selector_time_zone"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/itemTimeZone_tvTimeZone"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_weight="0.5"
        android:textColor="@color/black_text"
        android:textSize="@dimen/_15dp"
        tools:text="Số HĐ"/>

    <TextView
        android:id="@+id/itemTimeZone_tvContractNumber"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/_15dp"
        tools:text="Số HĐ"/>

    <TextView
        android:id="@+id/itemTimeZone_tvAbility"
        fontPath="@string/Helvetica_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/_15dp"
        tools:text="Năng lực"/>
</LinearLayout>
