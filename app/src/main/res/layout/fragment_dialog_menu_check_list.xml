<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/_20dp"
    android:layout_marginStart="@dimen/_20dp"
    android:background="@drawable/shape_circle_dialog_while"
    android:orientation="vertical">

    <TextView
        fontPath="@string/Helvetica_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_8dp"
        android:paddingEnd="@dimen/_8dp"
        android:paddingStart="@dimen/_8dp"
        android:text="@string/check_list_menu_title"
        android:textColor="@color/black_text"
        android:textSize="@dimen/_17dp"
        tools:ignore="MissingPrefix"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginTop="@dimen/_8dp"
        android:background="@color/silver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragDialogMenuCheckList_tvDetail"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/check_list_menu_detail"
            android:textColor="@color/bright_red"
            android:textSize="@dimen/_17dp"/>

        <View
            android:layout_width="@dimen/_1dp"
            android:layout_height="match_parent"
            android:background="@color/silver"/>

        <TextView
            android:id="@+id/fragDialogMenuCheckList_tvError"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/check_list_menu_error"
            android:textColor="@color/bright_blue"
            android:textSize="@dimen/_17dp"/>
    </LinearLayout>
</LinearLayout>