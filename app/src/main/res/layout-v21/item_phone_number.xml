<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCompletedContract_llRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:layout_marginBottom="@dimen/_8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itemPhoneNumber_tvNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:textColor="@color/steel"
        android:textSize="@dimen/_14dp"
        tools:text="@string/phone_number"/>

    <TextView
        android:id="@+id/itemPhoneNumber_tvDateUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:textColor="@color/steel"
        android:textSize="@dimen/_14dp"
        tools:text="@string/phone_number_date"/>

    <ImageView
        android:id="@+id/itemPhoneNumber_rbSms"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:layout_margin="@dimen/_8dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/selector_time_zone"
        tools:ignore="ContentDescription"/>

</LinearLayout>
